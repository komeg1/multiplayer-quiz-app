@page "/roomer"
<h1> welcome</h1>

@code {
    Microsoft.AspNetCore.SignalR.Client.HubConnection connection;

    protected override async Task OnInitializedAsync()
    {
        // Instantiate the HubConnection
        connection = new Microsoft.AspNetCore.SignalR.Client.HubConnectionBuilder()
            .WithUr("/room")
            .Build();

        // Start the connection
        await connection.StartAsync();

        // Add listener for the "ReceiveMessage" event
        connection.On<string, string, string>("ReceiveMessage", (sender, message, roomCode) =>
        {
            // Process the message here (e.g., display in UI, update state)
            Console.WriteLine($"Message from {sender} in room {roomCode}: {message}");
        });
    }

    // ... other code
}