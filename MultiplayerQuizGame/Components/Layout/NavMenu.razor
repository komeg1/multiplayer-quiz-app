                        </svg>
                            <span class="flex-1 ms-3 whitespace-nowrap text-white">Sign Up</span>
                    </a>
                </li>
                </NotAuthorized>
            </AuthorizeView>
            </ul>
        </div>
    </aside>

    

@code{

    protected override async Task OnAfterRenderAsync(bool isFirstRender)
    {
        if (isFirstRender)
        {
            await JSRuntime.InvokeVoidAsync("window.initializeFlowbite");
        }
    }
}

