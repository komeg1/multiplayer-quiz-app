@inject NavigationManager NavigationManager
@rendermode InteractiveServer
<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <CreateJoinGameButton></CreateJoinGameButton>
        </div>
        <AuthorizeView>
            <Authorized>
                <button @onclick="HandleUserPageRoute">User Page</button>
                <button class="button-27" @onclick="HandleLogoutRoute">Create game</button>
            </Authorized>
            <NotAuthorized>
                <div class="nav-item px-3">
                    <button class="button-27" @onclick="HandleRegisterRoute">Register</button>
                </div>
                <div class="nav-item px-3">
                    <button class="button-27" @onclick="HandleLoginRoute">Login</button>
                </div>
            </NotAuthorized>
        </AuthorizeView>
        
    </nav>
</div>

@code{
    void HandleRegisterRoute() => NavigationManager.NavigateTo("/register");
    void HandleLoginRoute() => NavigationManager.NavigateTo("/login");
    void HandleLogoutRoute() => NavigationManager.NavigateTo("/logout");
    void HandleUserPageRoute() => NavigationManager.NavigateTo("/user-page");


}